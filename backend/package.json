{
  "name": "campusgrid-backend",
  "version": "1.0.0",
  "description": "CampusGrid - College Internship Cell Exam Platform Backend",
  "main": "server.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node tests/system.test.js",
    "test:load": "node tests/load.test.js",
    "test:all": "npm test && npm run test:load",
    "db:seed": "node scripts/seedData.js",
    "db:indexes": "node scripts/createIndexes.js",
    "admin:create": "node scripts/createAdmin.js",
    "prod:start": "npx pm2 start ecosystem.config.js --env production",
    "prod:stop": "npx pm2 stop campusgrid",
    "prod:restart": "npx pm2 restart campusgrid",
    "prod:reload": "npx pm2 reload campusgrid",
    "prod:delete": "npx pm2 delete campusgrid",
    "prod:logs": "npx pm2 logs campusgrid",
    "prod:monit": "npx pm2 monit",
    "prod:status": "npx pm2 status campusgrid"
  },
  "keywords": [
    "exam-platform",
    "internship",
    "college",
    "mern",
    "education",
    "assessment",
    "code-execution",
    "recruitment"
  ],
  "author": {
    "name": "Utsav Mistry",
    "email": "utsavamistry30@gmail.com"
  },
  "contributors": [
    {
      "name": "Nishit Somani",
      "email": "somaninishit36@gmail.com"
    }
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/campusgrid.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/campusgrid/issues"
  },
  "homepage": "https://github.com/yourusername/campusgrid#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "bull": "^4.11.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "nodemailer": "^6.9.7",
    "redis": "^4.6.0"
  },
  "devDependencies": {
    "axios": "^1.6.0",
    "nodemon": "^3.0.1",
    "pm2": "^5.4.3"
  }
}
